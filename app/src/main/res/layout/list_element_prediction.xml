<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/route_list_layout"
  android:background="@android:color/holo_blue_dark"
  android:padding="15dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:id="@+id/prediction_route_layout"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tv_route_id"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:layout_gravity="center_vertical"
      android:textColor="@android:color/white"
      android:textSize="32sp"
      tools:text="28X" />

    <TextView
      android:id="@+id/tv_route_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:background="@android:color/transparent"
      android:textColor="@android:color/white"
      android:layout_gravity="center_vertical"
      android:textSize="15sp"
      tools:text="AIRPORT FLYER" />

    <TextView
      android:id="@+id/tv_route_direction"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:background="@android:color/transparent"
      android:textColor="@android:color/white"
      android:layout_gravity="center_vertical"
      android:textSize="15sp"
      tools:text="OUTBOUND" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_toEndOf="@id/prediction_route_layout"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_prediction_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:textColor="@android:color/white"
      android:layout_gravity="right"
      android:layout_margin="2dp"
      android:gravity="center"
      android:textSize="45sp"
      tools:text="30" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:textColor="@android:color/white"
      android:layout_gravity="bottom"
      android:gravity="right"
      android:textSize="20sp"
      android:textAllCaps="true"
      android:text="@string/mins" />
  </LinearLayout>

</RelativeLayout>
